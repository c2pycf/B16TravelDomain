<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl_toggles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ToggleButton
            android:id="@+id/tb_seat_0"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/toggle_seat"
            android:checked="false"
            android:text="1"
            android:textOff="1"
            android:textOn="1" />

        <ToggleButton
            android:id="@+id/tb_seat_1"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/tb_seat_0"
            android:background="@drawable/toggle_seat"
            android:checked="false"
            android:text="2"
            android:textOff="2"
            android:textOn="2" />

        <ToggleButton
            android:id="@+id/tb_seat_2"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:layout_below="@id/tb_seat_0"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/toggle_seat"
            android:checked="false"
            android:text="3"
            android:textOff="3"
            android:textOn="3" />

        <ToggleButton
            android:id="@+id/tb_seat_3"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:layout_below="@id/tb_seat_1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/tb_seat_2"
            android:background="@drawable/toggle_seat"
            android:checked="false"
            android:text="4"
            android:textOff="4"
            android:textOn="4" />

        <ToggleButton
            android:id="@+id/tb_seat_4"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:layout_below="@id/tb_seat_2"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/toggle_seat"
            android:checked="false"
            android:text="5"
            android:textOff="5"
            android:textOn="5" />

        <ToggleButton
            android:id="@+id/tb_seat_5"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:layout_below="@id/tb_seat_3"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/tb_seat_4"
            android:background="@drawable/toggle_seat"
            android:checked="false"
            android:text="6"
            android:textOff="6"
            android:textOn="6" />

        <ToggleButton
            android:id="@+id/tb_seat_6"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:layout_below="@id/tb_seat_4"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/toggle_seat"
            android:checked="false"
            android:text="7"
            android:textOff="7"
            android:textOn="7" />

        <ToggleButton
            android:id="@+id/tb_seat_7"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:layout_below="@id/tb_seat_5"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/tb_seat_6"
            android:background="@drawable/toggle_seat"
            android:checked="false"
            android:text="8"
            android:textOff="8"
            android:textOn="8" />

        <ToggleButton
            android:id="@+id/tb_seat_8"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:layout_below="@id/tb_seat_6"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/toggle_seat"
            android:checked="false"
            android:text="9"
            android:textOff="9"
            android:textOn="9" />

        <ToggleButton
            android:id="@+id/tb_seat_9"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:layout_below="@id/tb_seat_7"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/tb_seat_8"
            android:background="@drawable/toggle_seat"
            android:checked="false"
            android:text="10"
            android:textOff="10"
            android:textOn="10" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="16dp"
        android:background="#E4DFDF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_seat_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Amount"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_total_seats_fare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_toRightOf="@+id/tv_seat_amount"
            android:hint="fare" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_seat_amount"
            android:layout_marginLeft="15dp"
            android:text="Seat no:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_seats_selected"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_total_seats_fare"
            android:layout_marginLeft="100dp"
            android:hint="seats" />

        <ImageButton
            android:id="@+id/buttonNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="39dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/icons8_chevron_right_64" />


    </RelativeLayout>


</android.support.v7.widget.CardView>