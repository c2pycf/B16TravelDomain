<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/longroad"

    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/spinner_start_city"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:autofillHints="Select Start City"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="100dp"
        android:background="#36FDD835" />

    <Spinner
        android:id="@+id/spinner_destination_city"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner_start_city"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:autofillHints="Select Destination City"
        android:background="#36FDD835"
        />


    <include
        android:id="@+id/data_picker_card"
        layout="@layout/item_date_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/spinner_destination_city" />


    <Button
        android:id="@+id/btn_search_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search"
        app:layout_constraintTop_toBottomOf="@id/data_picker_card"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="30dp"
        style="@style/AppTheme.Button"/>

    <Button
        android:id="@+id/btn_journey_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        app:layout_constraintTop_toTopOf="@id/data_picker_card"
        app:layout_constraintEnd_toEndOf="@id/data_picker_card"
        android:layout_margin="@dimen/activity_vertical_margin"
        style="@style/AppTheme.Button"/>

    <TextView
        android:id="@+id/tv_date_of_journey_home"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Date of Journey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:layout_marginTop="50dp"

        />
</android.support.constraint.ConstraintLayout>