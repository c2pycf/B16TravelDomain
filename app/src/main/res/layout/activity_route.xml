<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/longroad"
    tools:context=".routeActivity.RouteActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/route_appbar">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/route_toolbar">

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/route_appbar"
        android:id="@+id/cv_route"
        app:cardUseCompatPadding="true"
        android:elevation="10dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cv_route_container">


            <TextView
                android:id="@+id/tv_start_city"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="text"
                app:layout_constraintTop_toTopOf="@id/cv_route_container"
                app:layout_constraintStart_toEndOf="@id/text_start_point"
                app:layout_constraintEnd_toEndOf="@id/cv_route_container"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="100dp"/>

            <TextView
                android:id="@+id/tv_destination"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="TextView"
                app:layout_constraintTop_toBottomOf="@id/tv_start_city"
                app:layout_constraintStart_toEndOf="@id/text_end_point"
                app:layout_constraintEnd_toEndOf="@id/cv_route_container"
                android:layout_marginTop="10dp"
                android:layout_marginStart="100dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/text_start_point"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="@string/start_point"
                app:layout_constraintStart_toStartOf="@id/cv_route_container"
                app:layout_constraintTop_toTopOf="@id/cv_route_container"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/text_end_point"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="@string/end_point"
                app:layout_constraintTop_toBottomOf="@id/text_start_point"
                app:layout_constraintStart_toStartOf="@id/cv_route_container"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"/>


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>